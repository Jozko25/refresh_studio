{
  "type": "webhook",
  "name": "refresh_booking_system",
  "description": "Systém rezervácií pre REFRESH laserové a estetické štúdio - vyhľadávanie služieb, kontrola dostupnosti a rezervácie",
  "disable_interruptions": false,
  "force_pre_tool_speech": "auto",
  "assignments": [],
  "api_schema": {
    "url": "https://refreshstudio-production.up.railway.app/api/elevenlabs",
    "method": "POST",
    "path_params_schema": [],
    "query_params_schema": [],
    "request_body_schema": {
      "id": "body",
      "type": "object",
      "description": "Extract the tool name and relevant parameters from the user's request. CRITICAL: For 'najbližší/najrýchlejší termín' implement 3-STEP VERIFICATION: 1) Use 'location_booking' with search_term = 'service + location' 2) Use 'search_service' to get service_id then 'find_soonest_slot' with worker_id = -1 3) Use 'search_services' to find similar services with different workers. Compare ALL results to find truly soonest slot across all workers and service variants.",
      "properties": [
        {
          "id": "tool_name",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Nástroj ktorý chcete použiť - KRITICKÉ: Pre 'najbližší termín' implementujte 3-KROKOVÝ PROCES: 1) location_booking 2) search_service + find_soonest_slot s worker_id = -1 3) search_services pre podobné služby. Dostupné: location_booking, search_service, find_soonest_slot, search_services, confirm_booking, get_services_overview, get_opening_hours",
          "dynamic_variable": "",
          "constant_value": "",
          "required": true
        },
        {
          "id": "search_term",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Hľadaný výraz - názov služby, lokácia, alebo dátum (v závislosti od nástroja)",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "service_name",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Názov služby pre rezerváciu (pre request_booking)",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "service_id",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "ID služby (pre check_specific_slot, check_date)",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "location",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Pobočka - 'bratislava' alebo 'pezinok'",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "preferred_location",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Preferovaná pobočka - 'bratislava' alebo 'pezinok'",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "date",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Dátum v formáte DD.MM.YYYY",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "time",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Čas v formáte HH:MM",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "customer_name",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Meno a priezvisko klienta (pre request_booking)",
          "dynamic_variable": "",
          "constant_value": "",
          "required": false
        },
        {
          "id": "user_name",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Alternatívne meno používateľa",
          "dynamic_variable": "",
          "constant_value": "",
