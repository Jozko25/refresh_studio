# Bookio Environment Configuration
# Copy this file to .env and fill in your actual values

# Node environment
NODE_ENV=development
PORT=3000

# Bookio Environment: demo, staging, or production
BOOKIO_ENV=demo

# Demo Environment Credentials
DEMO_USERNAME=your-demo-username@example.com
DEMO_PASSWORD=your-demo-password

# Staging Environment Credentials (optional)
STAGING_USERNAME=your-staging-username@example.com
STAGING_PASSWORD=your-staging-password

# Production Environment Credentials
PROD_USERNAME=your-production-username@example.com
PROD_PASSWORD=your-production-password

# Bookio API Configuration
BOOKIO_BASE_URL=https://services.bookio.com
BOOKIO_FACILITY_ID=16052

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Test database or service configurations
TEST_MODE=true
LOG_LEVEL=error

# Mock external services in test environment
MOCK_EXTERNAL_APIS=true

# OpenAI API Key for LLM service matching (optional)
OPENAI_API_KEY=your-openai-api-key-here